<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background_color"
    android:padding="15dp"
    tools:context=".resetpassword.ResetPasswordMobileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/reset_password_mobile_back_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/todo"
            android:padding="5dp"
            android:src="@drawable/ic_back_white"
            android:transitionName="reset_password_mobile_back_button_transition" />

        <ImageView
            android:layout_width="600dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/forgot_password" />

        <TextView
            android:id="@+id/reset_password_mobile_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/reset_password_mobile_title_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="70sp"
            android:textStyle="bold"
            android:transitionName="reset_password_mobile_title_text_transition" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reset_password_mobile_new_password_field_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/reset_password_mobile_new_password_hint_text"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidthFocused="4dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"
            app:hintTextColor="@color/white"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:startIconScaleType="fitStart"
            app:startIconTint="@color/white"
            app:startIconTintMode="src_atop">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reset_password_mobile_new_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/view_background_color"
                android:ems="20"
                android:fontFamily="serif"
                android:inputType="textPassword"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="50sp"
                app:hintTextColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reset_password_mobile_confirm_password_field_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/reset_password_mobile_confirm_password_hint_text"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidthFocused="4dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"
            app:hintTextColor="@color/white"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:startIconScaleType="fitStart"
            app:startIconTint="@color/white"
            app:startIconTintMode="src_atop">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reset_password_mobile_confirm_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/view_background_color"
                android:ems="20"
                android:fontFamily="serif"
                android:inputType="textPassword"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="50sp"
                app:hintTextColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/reset_password_mobile_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:indeterminate="false"
                android:maxHeight="20dip"
                android:minHeight="20dip"
                android:progress="0"
                android:textColor="@color/white"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/reset_password_mobile_progressbar_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/reset_password_mobile_progressbar_text"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/reset_password_mobile_password_info_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/reset_password_mobile_password_info_text"
            android:textColor="@color/white"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_password_mobile_password_set_password_button_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="10dp"
            android:background="@color/view_background_color"
            android:fontFamily="serif"
            android:padding="20dp"
            android:text="@string/reset_password_mobile_password_set_password_button_text"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            android:transitionName="reset_password_mobile_set_password_button_transition" />

        <ProgressBar
            android:id="@+id/resetNewProgressBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="-400dp"
            android:visibility="gone" />

        <include layout="@layout/show_internet_options" />

    </LinearLayout>

</ScrollView>