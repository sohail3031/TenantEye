<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/slider_layout_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="59dp"
        android:contentDescription="@string/todo"
        android:padding="20dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_task_24" />

    <TextView
        android:id="@+id/slider_layout_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="59dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/todo"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/slider_layout_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slider_layout_description_text_view"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="@string/todo"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/slider_layout_image_view"
        app:layout_constraintTop_toBottomOf="@+id/slider_layout_title_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>